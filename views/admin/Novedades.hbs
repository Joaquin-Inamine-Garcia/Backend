<h1> </h1>
<div class="container" style="margin-center: 20px;">
    <div class="row">
        <p class="text_end">Bienvenido/a
            <a class="btn btn-danger" href="/admin/login/logout">
                Cerrar sesion <i class="fa fa-sign-out"></i></a>
        </p>
    </div>

    <div class="row">
        <div class="col-7">
            <h1>Listado de novedades</h1>
        </div>
        <div class="col-5 text end">
            <a class="btn btn-success" href="/admin/Novedades/agregar"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagenes</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{Id}}</th>
                        <td>{{Titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-secondary" href="/admin/Novedades/modificar/{{Id}} "><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-sm btn-secondary" href="/admin/Novedades/eliminar/{{Id}} "><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>