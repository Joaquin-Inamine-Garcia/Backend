<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/Novedades/agregar" method="post" enctype="multipart/form-data">
           
                <div class="mb-3 row">
                    <input type="text" class="form-control" 
                    placeholder="Titulo" name="titulo"  enctype="multipart/form-data">
                </div>

                <div class="mb-3 row">
                    <textarea type="text" class="form-control" 
                    placeholder="Subtitulo" name="subtitulo"  enctype="multipart/form-data"></textarea>
                </div>

                <div class="mb-3 row">
                    <label> Imagen: <input type="file"
                     name="imagen" id="imagen"/></label>
                </div>

                <div class="mb-3 row">
                    <textarea type="text" class="form-control" 
                    placeholder="Cuerpo" name="cuerpo" enctype="multipart/form-data"></textarea>
                </div>

                <button type="submit" class="btn btn-primary" enctype="multipart/form-data">Guardar</button>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>